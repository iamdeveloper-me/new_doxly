<%
  path    = @role.new_record? ? deal_roles_path : deal_role_path(@deal, @role)
  method  = @role.new_record? ? :post : :put
%>
<%= render "app/shared/errors", :errors => @role.errors.full_messages %>
<%= form_for @role, :url => path, :method => method, :remote => true, :html => {class:"no-turboboost"} do |f| %>
  <div class="form-group <%= f.object.errors[:name].present? ? "has-error" : ""%>">
    <label for="name">Role</label>
    <%= f.text_field :name, :class => "form-control", :placeholder => "Name" %>
  </div>
<% end %>
