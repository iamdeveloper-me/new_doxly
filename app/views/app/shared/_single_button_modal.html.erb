<%
  title ||= nil
  modal_class ||= nil
  button_text ||= 'Done'
  button_class ||= 'btn btn-primary'
%>
<div class="modal-dialog <%= modal_class %>" role="document">
  <div class="modal-content">
    <div id="modal-blocker"></div>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="modal-new-deal-label">
        <%= title %>
      </h4>
    </div>
    <div id="sliding-pane"></div>
    <div class="modal-body">
      <%= yield %>
    </div>
    <div class="modal-footer">
      <button type="button" class="<%= button_class %> cancel-form" data-dismiss="modal"><%= button_text %></button>
    </div>
  </div>
</div>
