<div class="panel panel-window sign-in">
  <%= form_for(:user, url: new_user_session_path, method: :post, :html => { :class => 'no-turboboost' }) do |f|%>
    <div class="form-group">
      <label htmlFor="input-email">Email Address</label>
      <%= f.text_field :email, id: 'input-email', class: 'form-control', placeholder: "example@doxly.com" %>
    </div>

    <div class="form-group">
      <label htmlFor="input-password">Password</label>
      <%= f.password_field :password, id: 'input-password', class: 'form-control', autocomplete: "off", placeholder: "Password" %>
    </div>

    <div class="row">
      <div class="col-xs-6 checkbox pull-left">
        <label>
          <%= f.check_box :remember_me %> Remember Me
        </label>
      </div>
      <div class="col-xs-6 text-right whiteout-ui">
          <%= f.submit 'SIGN IN', class: 'button button-primary' %>
      </div>
    </div>

    <div class="row sso-note">
      Note: For firms with single sign-on access, please click 'forgot password' below which will send you your firm's unique login link.
    </div>
  <% end %>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="form-group">
      <%= link_to "Forgot password?", new_user_password_path %>
    </div>
  </div>
</div>
