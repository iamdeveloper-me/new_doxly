<%
  use_template = params[:use_template] || false
%>
<%= render "app/shared/errors", :errors => @signature_page.errors.full_messages %>
<%= form_for @signature_page, url: deal_signature_page_uploaded_custom_signature_page_path(@deal, @signature_page, tree_element_id: @tree_element.id, signing_capacity_id: @signing_capacity.id, signature_group_id: @signature_group.id, use_template: use_template), :method => :post, :remote => true, :html => { :class => 'no-turboboost' } do |f| %>
  <div class="form-group file-input-group">
    <label for="file">Attach Custom Signature Page (supported file types are PDF, DOCX, and DOC)</label>
    <%= f.file_field :file, :class => "file-inputs no-title bootstrap-file-input", :title => "<i class='icon-icon-uploadcloud'></i> Choose a File", "data-filename-placement" => "inside" %>
  </div>
<% end %>
