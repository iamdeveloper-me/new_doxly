<%= render "app/shared/errors", :errors => current_user.errors.full_messages %>
<%= form_for current_user, :url => change_password_path, :method => :put do |f| %>
  <div class="form-group <%= f.object.errors[:current_password].present? ? "has-error" : ""%>">
    <label for="input-user-password">Current Password</label>
    <%= f.password_field :current_password, :class => "form-control", autocomplete: "off", :placeholder => "Current Password" %>
  </div>
  <div class="form-group <%= f.object.errors[:password].present? ? "has-error" : ""%>">
    <label for="input-user-password">New Password</label>
    <%= f.password_field :password, :class => "form-control", autocomplete: "off", :placeholder => "New Password" %>
    <em>Must be at least 8 characters long, contain an uppercase letter, lowercase letter and a number.</em>
  </div>
  <div class="form-group <%= f.object.errors[:password_confirmation].present? ? "has-error" : ""%>">
    <label for="input-user-confirm-password">Confirm Password</label>
    <%= f.password_field :password_confirmation, :class => "form-control", autocomplete: "off", :placeholder => "Confirm Password" %>
  </div>
  <div class="margin-top-15">
    <button type="button" class="btn btn-default pull-left" onclick="App.Helpers.navigateTo('<%= app_root_path %>')">Cancel</button>
    <button type="submit" class="btn btn-primary pull-left margin-left-10">Save</button>
  </div>
<% end %>
