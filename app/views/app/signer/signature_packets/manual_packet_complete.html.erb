<%= render 'signer_nav_bar' %>
<%
  deal = @signature_packet.deal
%>

<% content_for :back_button do %>
  <%= link_to deal_signature_packets_signature_packets_path(deal_id: deal.id) do %>
    <div class="return-button">
      <%= image_tag 'ic-return.svg' %>
    </div>
    <div class="return-text">
      View all packets in <%= deal.title %>
    </div>
  <% end %>
<% end %>

<%= render 'shared/top_mobile' %>
<div class="completed-container">
  <div class="completed-content">
    <div class="dark-header completed">
      <div class="title">
        <i class="mdi mdi-48px mdi-checkbox-marked-circle"></i>
        <div>Completed!</div>
      </div>
    </div>
    <div class="text">
      This packet has been completed. Youâ€™ll receive an email if any additional changes are needed.
    </div>
    <hr>
    <% if @needs_signature_packets_count == 0 %>
      <%= render 'finished' %>
    <% else %>
      <%= render 'more_to_sign', completed: true %>
    <% end %>
  </div>
</div>
