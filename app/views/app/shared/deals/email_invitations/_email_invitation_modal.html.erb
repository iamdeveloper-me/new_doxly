<% title ||= "Invite To Deal" %>
<%= render :layout => 'shared/modal', :locals => { :title => title, :submit_button_label => "Send" } do %>
  <% if params[:action].include?("send_reminder") %>
    <%= render 'app/counsel/signature_packets/reminder_email_form' %>
  <% else %>
    <%= render 'app/shared/deals/email_invitations/custom_email_invitation_form' %>
  <% end %>
<% end %>
